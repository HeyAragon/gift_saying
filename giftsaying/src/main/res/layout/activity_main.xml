<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_radio_group"
        >
    </FrameLayout>
    <RadioGroup
        android:id="@id/main_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <RadioButton
            android:id="@+id/main_home_radio_btn"
            style="@style/main_radio_group_style"
            android:drawableTop="@drawable/ic_tab_home_selector"
            android:text="首页"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/main_hot_radio_btn"
            style="@style/main_radio_group_style"
            android:drawableTop="@drawable/ic_tab_hot_selector"
            android:text="榜单"
            />
        <RadioButton
            android:id="@+id/main_classify_radio_btn"
            style="@style/main_radio_group_style"
            android:drawableTop="@drawable/ic_tab_classify_selector"
            android:text="分类"
            />
        <RadioButton
            android:id="@+id/main_user_radio_btn"
            style="@style/main_radio_group_style"
            android:drawableTop="@drawable/ic_tab_user_selector"
            android:text="我的"
            />
    </RadioGroup>
</RelativeLayout>
